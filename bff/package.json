{
  "name": "iai-teaching-bff",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "prisma generate && tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "export:openapi": "npm run build && node scripts/export-openapi.js",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "seed": "ts-node src/seed.ts",
    "db:setup": "npm run db:migrate && npm run seed",
    "reset:admin": "ts-node src/reset-admin.ts",
    "import:students": "ts-node src/scripts/importStudents.ts",
    "import:entries": "ts-node src/scripts/importEntriesFromFile.ts",
    "import:teachers": "ts-node src/scripts/importTeachers.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^1.10.2",
    "adm-zip": "^0.5.16",
    "dotenv": "^16.4.7",
    "fastify": "^4.28.1",
    "fontkit": "^2.0.4",
    "pdfkit": "^0.13.0",
    "tesseract.js": "^7.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@prisma/client": "^5.22.0",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^22.8.6",
    "@types/pdfkit": "^0.17.4",
    "prisma": "^5.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
